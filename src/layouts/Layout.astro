---
import '../../src/styles/globals.css';
import '@fontsource-variable/inter/wght.css';
import interWoff2 from '@fontsource-variable/inter/files/inter-latin-wght-normal.woff2?url';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <title>{title}</title>
        <meta name='description' content='Studyxpert.in is trusted name in study abroad consultants in Hyderabad, guiding students toward prestigious universities worldwide.'>
        <meta name='keywords' content='study abroad consultants in Hyderabad, Scholarships for Indian, Study abroad scholarships, Students to study abroad, Get online study abroad counseling,  Expert Study Abroad Counseling, Online counseling study abroad, Free study abroad consultants in Hyderabad, ielts preparation online, Online ielts preparation in Hyderabad, Abroad Education Consultants in Hyderabad, Study abroad consultants in Hyderabad, Study abroad consultants in Hyderabad contact number,'>
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preload" as="font" type="font/woff2" href={interWoff2} crossorigin />
    </head>
    <body class="antialiased text-white bg-complementary">
        <div class="flex flex-col min-h-screen px-6 bg-noise sm:px-12">
            <div class="flex flex-col w-full max-w-5xl mx-auto grow">
                <Header />
                <main class="grow"><slot /></main>
                <Footer />
            </div>
        </div>
    </body>
</html>
