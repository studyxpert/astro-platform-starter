---
import Logo from '../components/Logo.astro';

const navItems = [
    { linkText: 'Home', href: 'https://studyxpert.edumilestones.com/' },
    { linkText: 'Profiling', href: 'https://careertest.edumilestones.com/student-profiler/?channel_id=MzU0OQ==' },
    { linkText: 'Abroad accommodation', href: 'https://careertest.edumilestones.com/abroad-accommodation.php?channel_id=MzU0OQ==' },
    { linkText: 'Book Appointment', href: 'https://studyxpert.edumilestones.com/career-counsellor/Sriram-Madhusudhan' },
    { linkText: 'India Admissions', href: 'https://studyxpert.edumilestones.com/login/global-admissions/' }
];
---

<nav class="flex flex-wrap items-center gap-4 pt-6 pb-16 sm:pt-12 sm:pb-24">
    <a href="/">
        <Logo />
    </a>
    {
        !!navItems?.length && (
            <ul class="flex flex-wrap gap-x-4 gap-y-1">
                {navItems.map((item) => (
                    <li>
                        <a href={item.href} class="inline-block px-1.5 py-1 sm:px-3 sm:py-2">
                            {item.linkText}
                        </a>
                    </li>
                ))}
            </ul>
        )
    }
</nav>
